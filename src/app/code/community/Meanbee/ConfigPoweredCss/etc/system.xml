<?xml version="1.0"?>
<config>
    <sections>
        <dev>
            <groups>
                <meanbee_configpoweredcss translate="label">
                    <label>Configuration Powered CSS</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>120</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>This module enables generation of a CSS file based on a template.</comment>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Meanbee Configuration Powered Css</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Make sure that skin/frontend/{package}/{theme}/meanbee/configpoweredcss/ is writable by the web server</comment>
                        </enabled>
                        <head_block>
                            <label>Block reference to add CSS item</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </head_block>
                        <logging translate="label">
                            <label>Enable Developer Logs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logging>
                    </fields>
                </meanbee_configpoweredcss>
            </groups>
        </dev>
    </sections>
</config>
